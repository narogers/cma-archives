<% @page_title = "#{@collection.title} - #{application_name}" %>
<%= render_breadcrumbs builder: Sufia::BootstrapBreadcrumbsBuilder %>

<div itemscope itemtype="http://schema.org/CollectionPage" class="row">
  <div class="col-sm-2">
    <%= render partial:'collections/media_display', locals: {resource: @collection} %>
  </div>
  <div class="col-sm-10">
    <header>
      <h1><%= @presenter.title %></h1>
      <p class="collection_description"><%= @presenter.description %></p>
    </header>
    <h2 id="member_details"><%= @presenter.summary %></h2>
  </div>
</div>

<div class="row for-sort-and-display">
    <%= render 'sort_and_per_page' %>
</div>

<%= render_document_index @member_docs %>

<div class="col-xs-12">
  <%= render 'paginate_centered' %>
</div>
