<h1>Sign in</h1>
<p>Enter your username and password to continue. For access to the Archival Repository contact <em>information here</em>.</p>

<%= form_for(resource, url: session_path(resource), 
			html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
	  <%= f.label :login, class: "col-sm-1" %>
	  <div class="col-sm-3 input-group">
	    <%= f.text_field :login, class: "form-control" %>
	    <div class="input-group-addon">@clevelandart.org</div>
	  </div>
	</div>
	<div class="form-group">
	  <%= f.label :password, class: "col-sm-1" %>
	  <div class="col-sm-4">
	    <%= f.password_field :password, class: "form-control" %>
	  </div>
	</div>
	<div class="form-group">
	  <%= f.submit "Log in" %>
	</div>
<% end %>