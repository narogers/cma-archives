<dl class="dl-horizontal">
  <dt>Date created</dt>
  <dd><%= work.create_date || "-" %></dd>
  
  <dt>Description</dt>
  <dd><%= truncate(work.description, length: 80, separator: ' ') || "-" %></dd>

  <dt>Source</dt>
  <dd><%= work.source %></dd>

  <dt>Subject(s)</dt>
  <dd>
    <% work.subject.each do |subject| %>
      <%= link_to_facet(subject, Solrizer.solr_name("subject", :facetable)) %><br />
    <% end %>
  </dd>
</dl>
