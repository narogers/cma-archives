<table class="table table-striped">
  <tbody>
  <% present_terms(@presenter,@presenter.terms - [:title, :description]) do |r, term| %>
    <% if r.value(term).present? %>
    <tr>
      <th><%= r.label(term) %></th>
      <td>
        <% if r.value(term).is_a? Array %>
          <ul>
          <% r.value(term).each do |val| %>
            <li><%= val %></li>
          <% end %>
          </ul>
        <% else %>
          <%= r.value(term) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
