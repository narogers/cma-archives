<div id="sortAndPerPage" class="row">
  <div class="col-xs-12 col-md-6">
    <div class="btn-group" id="per_page-dropdown" role="group">
      <%= render "per_page_widget" %>
      <%= paginate @response, 
          page_entries_info: page_entries_info(@response),
          theme: "bootstrap3_compact" %> 
    </div>
  </div>
  
  <div class="col-xs-12 col-md-6">
    <div class="pull-right">
      <%= render "sort_widget" %>
      <%= render "view_type_group" %>
    </div>
  </div>
</div>
